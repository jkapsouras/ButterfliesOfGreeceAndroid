<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/actypogrotesk</item>
        <!-- Customize your theme here.
         <item name="android:fontFamily">@font/nunito</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="FieldTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/actypogrotesk</item>
        <item name="themeName">"FieldTheme"</item>
        <item name="background">@color/field</item>
        <item name="colorPrimary">@color/field</item>
        <item name="colorPrimaryDark">@color/field</item>
        <item name="colorAccent">@color/field_dark</item>
        <item name="colorControlNormal">@color/field_dark</item>
    </style>

    <style name="ContributeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/actypogrotesk</item>
        <item name="themeName">"ContributeTheme"</item>
        <item name="android:titleTextColor">@color/contribute_dark</item>
        <item name="background">@color/contribute_dark</item>
        <item name="colorPrimary">@color/contribute_dark</item>
        <item name="colorPrimaryDark">@color/contribute_dark</item>
        <item name="colorAccent">@color/contribute_dark</item>
        <item name="colorControlNormal">@color/contribute_dark</item>
    </style>

    <style name="EndangeredTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/actypogrotesk</item>
        <item name="themeName">"EndangeredTheme"</item>
        <item name="android:titleTextColor">@color/endangered_dark</item>
        <item name="background">@color/endangered_dark</item>
        <item name="colorPrimary">@color/endangered_dark</item>
        <item name="colorPrimaryDark">@color/endangered_dark</item>
        <item name="colorAccent">@color/endangered_dark</item>
        <item name="colorControlNormal">@color/endangered_dark</item>
    </style>

    <style name="SearchTheme" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:textColor">@color/field_dark</item>
        <item name="editTextColor">@color/field_dark</item>
        <item name="android:textColorHint">@color/field_dark</item>
        <item name="tint">@color/field_dark</item>
    </style>

    <style name="Widget.Design.TextInputLayout" parent="AppTheme">
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
        <item name="errorTextAppearance">@style/AppTheme.TextErrorAppearance</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow</item>
    </style>

    <style name="editTheme" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="colorControlNormal">@color/contribute_dark</item>
        <item name="colorControlActivated">@color/contribute_dark</item>
        <item name="colorControlHighlight">@color/contribute_dark</item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/contribute_dark</item>
    </style>

    <style name="AppTheme.TextErrorAppearance" parent="TextAppearance.Design.Error">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/contribute_dark</item>
    </style>

</resources>
